html
    head
        title #{query}
        link(rel="stylesheet" href="/stylesheets/style.css")
        meta(name="viewport" content="width=device-width, initial-scale=1")

    body
        ul
            each result in results
                li
                    h3 #{result.title}
                    a(href=result.url) #{result.url}
                    span #{result.description}
